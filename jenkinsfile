pipeline {
agent { label "k8s_node"}
  stages {
    stage ("Checkout stage") {
      steps {
        git branch: 'master' , url: 'https://github.com/brad-jivedh/simple-java-maven-app.git'
      }
    }
stage ("Builiding Docker Image") {
  steps {
    script {
      echo "Building the docker image"
      sh 'sudo docker build -t jivedh2019/assign:${BUILD_NUMBER} .'
    }
  }
}
stage("Pushing the image to DockerHub") {
            environment {
                DOCKER_CREDENTIALS=credentials('docker_hub')
            }
            steps {
                script {
                  sh 'docker login -u ${DOCKER_CREDENTIALS_USR} -p ${DOCKER_CREDENTIALS_PSW}'
                  sh 'docker push jivedh2019/assign:${BUILD_NUMBER}'
}
}
}
stage("Deploying in k8s cluster") {
  steps {
    sh 'sudo -i'
    sh 'kubectl version --client'
    sh 'kubectl apply -f Deployment.yaml -f nodeport.yaml'
  }
}
}
}
